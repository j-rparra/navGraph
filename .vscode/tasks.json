{ 
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: g++ build active file",
            "command": "/usr/bin/g++",
            "args": [
                "-std=c++17",
                "-I",
                "~/include",
                "-L",
                "~/lib",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}",
                "-lsdsl",
                "-ldivsufsort",
                "-ldivsufsort64",
                "-lstdc++fs"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task for sdsl."
        },
        {
            "type": "cmake",
            "label": "CMake: build",
            "command": "build",
            "targets": [
                ""
            ],
            "group": "build",
            "problemMatcher": [],
            "detail": "Bob's template build task"
        }
    ],
    "version": "2.0.0"
}